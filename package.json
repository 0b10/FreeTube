{
  "name": "FreeTube",
  "productName": "FreeTube",
  "version": "0.2.1",
  "description": "An Open Source YouTube app focused on privacy.",
  "main": "src/js/init.js",
  "scripts": {
    "start": "electron .",
    "package": "electron-forge package",
    "make": "electron-forge make",
    "publish": "electron-forge publish",
    "make:mac:zip": "build --mac zip",
    "make:mac:dmg": "build --mac dmg",
    "make:deb": "build --linux deb",
    "make:rpm": "build --linux rpm",
    "make:appimage": "build --linux appimage",
    "make:win32": "build --win",
    "pack": "build --dir",
    "dist": "build"
  },
  "keywords": [],
  "author": {
    "name": "PrestonN",
    "email": "FreeTubeApp@protonmail.com",
    "url": "https://github.com/FreeTubeApp/FreeTube"
  },
  "license": "GPL-3.0",
  "build": {
    "appId": "freetube",
    "asar": true,
    "mac": {
      "category": "public.app-category.video",
      "icon": "src/icons/iconColor.icns"
    },
    "linux": {
      "icon": "src/icons/iconColor.png",
      "target": [
        "AppImage",
        "deb",
        "rpm",
        "snap"
      ]
    },
    "win": {
      "target": "NSIS",
      "icon": "src/icons/iconColor.ico"
    }
  },
  "devDependencies": {
    "electron-builder": "^20.13.4",
    "electron-forge": "^5.2.2",
    "electron-forge-maker-appimage": "^20.14.0",
    "electron-installer-appimage": "^1.0.1",
    "electron-packager": "^12.0.2",
    "electron-prebuilt-compile": "1.8.2",
    "electron-winstaller": "^2.6.4"
  },
  "dependencies": {
    "autolinker": "^1.6.2",
    "dateformat": "^3.0.3",
    "electron-compile": "^6.4.2",
    "electron-squirrel-startup": "^1.0.0",
    "jquery": "^3.3.1",
    "mustache": "^2.3.0",
    "nedb": "^1.8.0",
    "opml-to-json": "0.0.3",
    "ytdl-core": "^0.20.4"
  }
}
